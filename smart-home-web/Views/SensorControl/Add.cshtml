@using smart_home_web.Models.ControlSensor;
@model AddSensorControlViewModel;


<body>
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
            <div class="text-center">
                <label style="font-size:20px">Create new SensorControl element</label>
            </div>
            <form asp-action="Add" asp-controller="SensorControl" method="post">
                <div class="form-group col-lg-6 col-lg-offset-3">
                    <label class="control-label">SensorControl Name</label>
                    <input asp-for="Name" value="@Model.Name" />
                </div>
                <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>
                <div class="form-group col-lg-6 col-lg-offset-3">
                    <label class="control-label">Select report element type:</label>
                    <div style="margin-bottom:50px">
                        <select id="type-select" asp-for="ControlId" asp-items="@ViewBag.modelControlSensors" class="nice-select">
                            <option value="none">
                                Select an Option
                            </option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-lg-6 col-lg-offset-3">
                    <label class="control-label">
                        Select measurement period:
                    </label>
                    <div>
                        <select id="type-select" asp-for="SensorId" asp-items="@ViewBag.modelSensors" class="nice-select">
                            <option value="none">
                                Select an Option
                            </option>
                        </select>
                    </div>
                    <div class="form-group col-lg-6 col-lg-offset-3">
                        <label class="control-label">SensorControl Name</label>
                        <input asp-for="minValue" value="" />
                    </div>
                    <div class="form-group col-lg-6 col-lg-offset-3">
                        <label class="control-label">SensorControl Name</label>
                        <input asp-for="maxValue" value="" />
                    </div>
                </div>
                <div class="form-group text-center col-lg-6 col-lg-offset-3" style="margin-top:30px">
                    <input type="submit" value="Create" class="btn btn-success text-center" style="width:20%" />
                    <a asp-controller="SensorControl" asp-action="Index" class="btn btn-primary"><em class="glyphicon glyphicon-arrow-left"></em> Back to dashboard</a>
                </div>
            </form>
        </div>
    </div>

</body>





























