@using smart_home_web.Models.ControlSensor;
@model EditSensorControlViewModel;


    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <form asp-action="Edit" asp-controller="SensorControl" role="form">
                    <h2 class="text-center">Edit SensorControl</h2>
                    <hr class="colorgraph">
                    <div class="form-group">
                        <input asp-for="Name" class="form-control input-lg" placeholder="" tabindex="3">
                    </div>
                    <div class="form-group">
                        <select id="type-select" asp-for="ControlSensorId" asp-items="@ViewBag.modelControlSensors" class="form-control">
                            <option value="">
                                Select an ControlSensor
                            </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select id="type-select" asp-for="SensorId" asp-items="@ViewBag.modelSensors" class="form-control">
                            <option value="">
                                Select an Sensor
                            </option>
                        </select>
                    </div>                  
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input asp-for="minValue" class="form-control input-lg" placeholder="Min" tabindex="5">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input asp-for="maxValue" class="form-control input-lg" placeholder="Max" tabindex="6">
                                </div>
                            </div>
                        </div>                     
                    <div class="form-group">
                        <input type="submit" class="btn btn-success text-center center-block" />
                        <a asp-controller="SensorControl" asp-action="Index" class="btn btn-primary center-block"><em class="glyphicon glyphicon-arrow-left"></em> Back to SensorControl</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts {
 @await Html.PartialAsync("_ValidationScriptsPartial")
 }
