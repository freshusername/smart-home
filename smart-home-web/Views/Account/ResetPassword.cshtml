@using smart_home_web.Models;
@model ResetPasswordViewModel

<div class="container box_1170 border-top-generic">
    <div class="section padding_top justify-content-center">
        <div class="row ">
            <form method="post">
                <div class="form-row" asp-validation-summary="All">
                    <div class="col-md-12">
                        <div class="position-relative form-group">
                            <label for="exampleEmail" class="">
                                Email
                            </label>
                            <input id="exampleEmail" type="email" asp-for="Email" class="form-control" value="" placeholder="Email" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="position-relative form-group">
                            <label for="examplePassword" class="">
                                Password
                            </label>
                            <input asp-for="Password" class="form-control" value="" placeholder="Password">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="position-relative form-group">
                            <label for="examplePasswordRep" class="">
                                Repeat Password
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" value="" placeholder="Confirm password">
                        </div>
                    </div>
                </div>
                <div class="mt-4 d-flex align-items-center">
                    <div class="ml-auto form-group">
                        <button type="submit" value="submit" class="btn-wide btn-pill btn-shadow btn-hover-shine btn btn-primary btn-lg">Change Password</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
