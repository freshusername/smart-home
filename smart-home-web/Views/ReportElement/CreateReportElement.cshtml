@model smart_home_web.Models.ReportElements.CreateReportElementViewModel;
@{
    ViewData["Title"] = "Create Report Element";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/nice-select/dist/css/nice-select.css" rel="stylesheet" />

<body>
    <div class="row" data-save-url="@Url.Action("GetSensorsByReportElementType", "Dashboard")">

        <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
            <div class="text-center">
                <span style="font-size:20px">Create new report element</span>
            </div>
            <form asp-action="CreateReportElement" asp-controller="ReportElement" method="post">

                <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>

                <div class="form-group">
                    <input type="hidden" asp-for="@Model.DashboardId" value="@Model.DashboardId" />
                </div>
                <div class="form-group">
                    <label class="control-label">Select report element type:</label>
                    <div style="margin-bottom:50px">
                        <select id="type-select" asp-for="Type" asp-items="Html.GetEnumSelectList<Domain.Core.Model.Enums.ReportElementType>()" class="col-lg-4 col-md-5 col-sm-6 col-xs-12">
                            <option value="none" selected disabled hidden>
                                Select an Option
                            </option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Select report element type:</label>
                    <div style="margin-bottom:50px">
                        <select id="sensor-select" asp-for="SensorId" class="col-lg-4 col-md-5 col-sm-6 col-xs-12">
                            <option value="none" selected disabled hidden>
                                Select an Option
                            </option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">
                        Select measurement period:
                    </label>
                    <div style="margin-bottom:50px">
                        <select asp-for="Hours" class="nice-select col-lg-4 col-md-5 col-sm-6 col-xs-12">
                            <option value="none" selected disabled hidden>
                                Select an Option
                            </option>
                            <option value="1">1 hour</option>
                            <option value="3">3 hours</option>
                            <option value="6">6 hours</option>
                            <option value="12">12 hours</option>
                            <option value="24">1 day</option>
                            <option value="168">7 days</option>
                            <option value="336">14 days</option>
                            <option value="720">30 days</option>
                            <option value="2160">90 days</option>
                            <option value="2399976">For all time</option>
                        </select>
                    </div>
                </div>

                <div class="form-group text-center col-lg-6 col-lg-offset-3" style="margin-top:30px">
                    <input type="submit" value="Save" class="btn btn-success text-center" style="width:20%" />
                </div>
            </form>
        </div>
    </div>

</body>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/nice-select/dist/js/jquery.nice-select.min.js"></script>
    <script>
        $(document).ready(function () {
            $('select').niceSelect();
            get();

            function get() {
                $.ajax({
                    type: "Get",
                    url: $(".row").data("save-url"),
                    data: { type: $(this).children("option:selected").val(), dashboardId: @(Model.DashboardId)},
                    success: function (res) {
                        $('#sensor-select').empty()
                        $.each(res, function (key, value) {
                            $('#sensor-select')
                                .append($("<option></option>")
                                    .attr("value", value.id)
                                    .text(value.name));
                        });
                        $('select').niceSelect('update');
                    },
                    error: function (res) {
                        console.log(res);
                    }
                });
            }
            
            $("select#type-select").change(function () {
                get();
            });
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}