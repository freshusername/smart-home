@model smart_home_web.Models.ReportElements.CreateReportElementViewModel;
@{
    ViewData["Title"] = "Create Report Element";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<body>
    <div class="row">

        <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
            <div class="text-center">
                <span style="font-size:20px">Create new report element</span>
            </div>
            <form asp-action="CreateReportElement" asp-controller="ReportElement" method="post">

                <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>

                <div class="form-group">
                    <input type="hidden" asp-for="@Model.DashboardId" value="@Model.DashboardId" />
                </div>
                <div class="form-group text-center col-lg-6 col-lg-offset-3" style="margin-top:30px">
                    <input type="submit" value="Save" class="btn btn-success text-center" style="width:20%" />
                </div>
            </form>
        </div>
    </div>
</body>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}