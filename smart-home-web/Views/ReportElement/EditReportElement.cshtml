@model smart_home_web.Models.ReportElements.EditReportElementViewModel;
@{
    ViewData["Title"] = "Edit Report Element";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/nice-select/dist/css/nice-select.css" rel="stylesheet" />

<body>
    <div class="row">

        <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
            <div class="text-center">
                <label style="font-size:20px">Edit word cloud for @Model.SensorName for @Model.DashboardName</label>
            </div>
            <form asp-action="EditReportElement" asp-controller="ReportElement" method="post">

                <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="DashboardId" value="@Model.DashboardId" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="SensorId" value="@Model.SensorId" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Type" value="@Model.Type" />
                </div>
                <div class="form-group">
                    <label class="control-label">Dashboard name: </label>
                    <input type="text" disabled="disabled" asp-for="DashboardName" value="@Model.DashboardName" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Sensor name: </label>
                    <input type="text" disabled="disabled" asp-for="SensorName" value="@Model.SensorName" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Report element type: </label>
                    <input type="text" disabled="disabled" asp-for="Type" value="@Model.Type" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">
                        Select measurement period:
                    </label>
                    <div style="margin-bottom:50px">
                        <select asp-for="Hours" asp-items="Html.GetEnumSelectList<Domain.Core.Model.Enums.ReportElementHours>()" class="nice-select col-lg-4 col-md-5 col-sm-6 col-xs-12">
                            <option value="none" selected disabled hidden>
                                Select an Option
                            </option>
                        </select>
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-success text-center" style="width:20%" />
                </div>
            </form>
        </div>
    </div>

</body>
@section Scripts {
    <script src="~/lib/nice-select/dist/js/jquery.nice-select.min.js"></script>
    <script>
        $(document).ready(function () {
            $('select').niceSelect();
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}