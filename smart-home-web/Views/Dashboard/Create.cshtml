@model smart_home_web.Models.Dashboard.DashboardViewModel;
@{
    ViewData["Title"] = "Create new dashboard";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<body>
    <div class="row" data-save-url="@Url.Action("GetSensorsByReportElementType", "Sensor")">

        <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
            <div class="text-center">
                <span style="font-size:20px">Create new dashboard</span>
            </div>
            <form asp-action="Create" asp-controller="Dashboard" method="post" class="text-center">

                <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>

                @*<div class="form-group">
                    <input type="hidden" asp-for="@Model.AppUserId" value="@Model.AppUserId" />
                </div>*@
                <div class="form-group">
                    <label class="control-label">Enter name of dashboard</label>
                    <p><input asp-for="@Model.Name" /></p>
                </div>
                <div class="form-group text-center col-lg-6 col-lg-offset-3" style="margin-top:30px">
                    <input type="submit" value="Save" class="btn btn-success text-center" style="width:20%" />
                </div>
            </form>
        </div>
    </div>

</body>