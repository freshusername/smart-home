<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/gridstack@0.6.0/dist/gridstack.min.css" />
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/gridstack@0.6.0/dist/gridstack.all.js"></script>
<script src="~/lib/GridItem/test.js"></script>

<h1>Dash</h1>

<div class="grid-stack">
    @foreach (var report in Model.ReportElements)
    {<div id="@report.Id" class="grid-stack-item shadow-standart" data-gs-x="4" data-gs-y="0" data-gs-width="4" data-gs-height="4">
            <div class="grid-stack-item-content">
                <div>@report.Id</div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $('.grid-stack').gridstack();
    $('body').on('change', '.grid-stack', function (event, items) {
        var options = [];
        options = items.map(i => {
            return { id: i.el[0].id, x: i.x, y: i.y, width: i.width, height: i.height }
        });
        console.log(options);     
        
    });
</script>

