@model smart_home_web.Models.History.AllHistoriesViewModel
@using Infrastructure.Business.DTOs;
@using Domain.Core.Model.Enums;

<div class="text-center d-flex flex-column align-items-center">
    <table class="table table-hover">
        <thead class="text-center">
            <tr>
                <th scope="col" class=" text-center">
                    @{
                        var sensor = (FilterDto)Model.FilterDto.Clone();
                        sensor.sortState = (sensor.sortState == SortState.HistoryAsc) ? SortState.HistoryDesc : SortState.HistoryAsc;
                    }
                    <a href="@Url.Action("Index", "History",
                                        sensor,
                                        null)">
                        Id <i class="glyphicon glyphicon-sort"></i>
                    </a>
                </th>
                <th class="text-center">SensorName</th>
                <th scope="col" class=" text-center">
                    @{
                        var date = (FilterDto)Model.FilterDto.Clone();
                        date.sortState = (date.sortState == SortState.DateAsc) ? SortState.DateDesc : SortState.DateAsc;
                    }
                    <a href="@Url.Action("Index", "History",
                                        date,
                                        null)">
                        Date <i class="glyphicon glyphicon-sort"></i>
                    </a>
                </th>
                <th class="text-center">Value</th>
                <th class="text-center">MeasurementUnit</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (!Model.Histories.Any())
            {
                <tr>
                    <td colspan="5">No histories</td>
                </tr>
            }
            else
            {
                @foreach (var history in Model.Histories)
                {
                    <tr>
                        <td>@history.Id</td>
                        <td>
                            <a asp-controller="History" asp-action="Detail" asp-route-sensorId="@history.SensorId">
                                @history.SensorName
                            </a>
                        </td>
                        <td>@history.Date.UtcDateTime.ToLocalTime()</td>

                        @{
                            if (history.Value.ToString() == "False")
                            {
                                <td>Inactive</td>
                            }
                            else if (history.Value.ToString() == "True")
                            {
                                <td>Active</td>
                            }
                            else
                            {
                                <td>@history.Value</td>
                            }
                        }
                        <td>@history.MeasurementName</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        <br />
        @await Component.InvokeAsync("Pagination", new { action = "Index", controller = "History", filterDto = Model.FilterDto })
    </div>
    
</div>