@using smart_home_web.Models.History;
@using Infrastructure.Business.DTOs;


@model AllHistoriesViewModel;


@{
    ViewData["Title"] = "Histories";
}

<h2>Histories List</h2>

<body class="body-content">
    <div class="row text-center">
        <h2 style="color:blue;">Sensor`s Histories</h2>
        <table class="table table-hover table-responsive">
            <caption>List of sensor`s histories</caption>
            <thead class="text-center">
                <tr>
                    <th scope="col" class=" text-center">
                        Id
                        
                            @*<a class="menu-toggle text-center" asp-action="Index" asp-route-paginationDTO="@Model.paginationDTO.Clone()">
                                <i class="glyphicon glyphicon-sort"></i>
                            </a>*@
                    </th>
                    <th class="text-center">SensorName</th>
                    <th scope="col" class=" text-center">
                        Date
                            @*<a class="menu-toggle text-center" asp-action="Index" asp-route-paginationDTO="@Model.paginationDTO.Clone()">
                                <i class="glyphicon glyphicon-sort"></i>
                            </a>*@
                    </th>
                    <th class="text-center">Value</th>
                    <th class="text-center">MeasurementUnit</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var history in Model.Histories)
                {
                    <tr>
                        <td>@history.Id</td>
                        <td>
                            <a asp-controller="History" asp-action="Detail" asp-route-sensorId="@history.SensorId">
                                @history.SensorName
                            </a>
                        </td>
                        <td>@history.Date</td>

                        @{
                            if (history.Value.ToString() == "False")
                            {
                                <td>Unactive</td>
                            }
                            else if (history.Value.ToString() == "True")
                            {
                                <td>Active</td>
                            }
                            else
                            {
                                <td>@history.Value</td>
                            }
                        }



                        <td>@history.MeasurementName</td>
                    </tr>
                }
            </tbody>

        </table>
        <br />
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                @if (Model.FilterDTO != null)
                {
                    @if (Model.FilterDTO.HasPrevious)
                    {
                        <li class="page-item">
                            @{
                                var prev = (FilterDTO)Model.FilterDTO.Clone();
                                prev.CurrentPage = Model.FilterDTO.CurrentPage - 1;
                            }

                            @Html.ActionLink("prev", "Index", "History", null, null, null,
                                      prev,
                                      null)
                        </li>
                    }

                    @for (var i = 1; i <= Model.FilterDTO.PagesCount; i++)
                    {
                        var page_i = (FilterDTO)Model.FilterDTO.Clone();
                        page_i.CurrentPage = i;

                        <li class="page-item @( i == Model.FilterDTO.CurrentPage ? "active" : "")">
                            @Html.ActionLink(i.ToString(), "Index", "History", null, null, null,
                                page_i,
                                null)
                        </li>
                    }
                    @if (Model.FilterDTO.HasNext)
                    {
                        <li class="page-item">
                            @{
                                var next = (FilterDTO)Model.FilterDTO.Clone();
                                next.CurrentPage = Model.FilterDTO.CurrentPage + 1;
                            }

                            @Html.ActionLink("next", "Index", "History", null, null, null,
                                      next,
                                      null)
                        </li>
                    }
                }
            </ul>
        </nav>

        @*<partial name="_PaginationView" />*@
    </div>

</body>