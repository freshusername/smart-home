@model smart_home_web.Models.History.InvalidSensorsViewModel;
@{ 
    ViewData["Title"] = "Invalid sensors";
}

<body class="body-content">
    <div class="row text-center">
        <h2 style="color:red;">Invalid Sensors</h2>
        <br />
        <table class="table table-striped table-hover table-responsive">
            <caption>List of invalid sensors</caption>
            <thead class="thead-dark">
                <tr>
                    <th scope="col">
                        <a class="menu-toggle" asp-action="InvalidSensors" asp-route-sortState="@ViewBag.SensorSort">
                            Sensor <i class="glyphicon glyphicon-sort"></i>
                        </a>
                    </th>

                    <th scope="col">
                        <a class="menu-toggle" asp-action="InvalidSensors" asp-route-sortState="@ViewBag.DateSort">
                            Date <i class="glyphicon glyphicon-sort"></i>
                        </a>
                    </th>

                    <th scope="col">
                        <a class="menu-toggle" asp-action="InvalidSensors" asp-route-sortState="@ViewBag.StringSort">
                            StringValue <i class="glyphicon glyphicon-sort"></i>
                        </a>
                    </th>

                    <th scope="col">
                        <a class="menu-toggle" asp-action="InvalidSensors" asp-route-sortState="@ViewBag.IntSort">
                            IntValue <i class="glyphicon glyphicon-sort"></i>
                        </a>
                    </th>

                    <th scope="col">
                        <a class="menu-toggle" asp-action="InvalidSensors" asp-route-sortState="@ViewBag.DoubleSort">
                            DoubleValue <i class="glyphicon glyphicon-sort"></i>
                        </a>
                    </th>

                    <th scope="col">
                        <a class="menu-toggle" asp-action="InvalidSensors" asp-route-sortState="@ViewBag.BoolSort">
                            BoolValue <i class="glyphicon glyphicon-sort"></i>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var history in Model.Histories)
                {
                    <tr>
                        <td scope="row">@history.SensorId</td>
                        <td>@history.Date</td>
                        <td>@history.StringValue</td>
                        <td>@history.IntValue</td>
                        <td>@history.DoubleValue</td>
                        <td>@history.BoolValue</td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        
        @if (Model.PageViewModel.HasPreviousPage)
        {
            <a asp-action="InvalidSensors"
               asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
               class="btn btn-outline-dark page-link">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Previous
            </a>
        }
        @if (Model.PageViewModel.HasNextPage)
        {
            <a asp-action="InvalidSensors"
               asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
               class="btn btn-outline-dark page-link">
                Next
                <i class="glyphicon glyphicon-chevron-right"></i>
            </a>
        }
    </div>
    
</body>


