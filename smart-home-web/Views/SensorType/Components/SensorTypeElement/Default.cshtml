@model smart_home_web.Models.SensorType.SensorTypeViewModel

    <li class="list-group-item element-container" data-element-container-id="@Model.Id.ToString()">
        <div class="widget-content p-0">
            <div class="widget-content-wrapper">
                <div class="widget-content-left center-block mr-4 ml-2">
                    @if (Model.IconPath != null)
                    {
                        <img src="@Model.IconPath" width="52" height="52" onerror="this.src='https://static.thenounproject.com/png/340719-200.png'" />
                    }
                    else
                    {
                        <img src="https://static.thenounproject.com/png/340719-200.png" width="52" height="52" />
                    }
                </div>
                <div class="widget-content-left" style="width:350px">
                    <div class="widget-heading">
                        @Model.Name
                    </div>
                    <div class="widget-subheading">
                        @{
                            if (!string.IsNullOrEmpty(@Model.Comment))
                            {
                                @Model.Comment
                            }
                            else
                            {
                                <span style="color:darkgrey">None</span>
                            }
                        }
                    </div>
                </div>
                <div class="mr-auto">
                    <div class="widget-content-right"
                         style="
                      text-align: right;
                      display: inline-block;
                      margin-left: auto;">

                        <div class="text-right opacity-6"><b>MeasurementName:</b></div>
                        <div class="text-right opacity-6"><b>MeasurementType:</b></div>
                    </div>

                    <div class="text-left ml-3"
                         style="display: inline-block;
                     margin-right: auto;">
                        <div>
                            @{
                                if (!string.IsNullOrEmpty(@Model.MeasurementName))
                                {
                                    @Model.MeasurementName
                                }
                                else
                                {
                                    <span style="color:darkgrey">None</span>
                                }
                            }
                        </div>
                        <div>@Model.MeasurementType</div>
                    </div>

                </div>
                <div class="pull-right">
                    <div role="group" class="btn-group">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-shadow btn-info element-edit">
                                <i class="text-white pe-7s-config" style="font-size:20px"></i>
                            </a>
                            <a class="btn btn-shadow btn-danger element-delete p-0 pl-2 pr-2">
                                <i class="text-white pe-7s-close" style="font-size:30px;"></i>
                            </a>
                        }
                    </div>

                </div>
            </div>
        </div>
    </li>
