@model smart_home_web.Models.SensorType.SensorTypeViewModel

<li class="list-group-item sensor-type-row" data-sensor-type-row-id="@Model.Id">
    <div class="widget-content p-0">
        <div class="widget-content-wrapper">
            <div class="widget-content-left mr-4 ml-2">
                @if (Model.IconPath != null)
                {
                    <img src="@Model.IconPath" width="52" height="52" />
                }
                else
                {
                    <p>No image was added</p>
                }
            </div>
            <div class="widget-content-left" style="width:350px">
                <div class="widget-heading">
                    @Model.Name
                </div>
                <div class="widget-subheading">
                    @{
                        if (!string.IsNullOrEmpty(@Model.Comment))
                        {
                            @Model.Comment
                        }
                        else
                        {
                            <span style="color:darkgrey">None</span>
                        }
                    }
                </div>
            </div>
            <div class="mr-auto" >
                <div class="widget-content-right"
                     style="
                      text-align: right;
                      display: inline-block;
                      margin-left: auto;">

                    <div class="text-right opacity-6"><b>MeasurementName:</b></div>
                    <div class="text-right opacity-6"><b>MeasurementType:</b></div>
                </div>

                <div class="text-left ml-3"
                     style="display: inline-block;
                     margin-right: auto;">
                    <div>
                        @{
                            if (!string.IsNullOrEmpty(@Model.MeasurementName))
                            {
                                @Model.MeasurementName
                            }
                            else
                            {
                                <span style="color:darkgrey">Unknown</span>
                            }
                        }
                    </div>
                    <div>@Model.MeasurementType</div>
                </div>

            </div>
            <div class="mr-3">
                <div role="group" class="btn-group">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-shadow btn-info sensor-type-edit">
                            <i class="text-white pe-7s-config" style="font-size:20px"></i>
                        </a>
                        <a class="btn btn-shadow btn-danger sensor-type-delete p-0 pl-2 pr-2">
                            <i class="text-white pe-7s-close" style="font-size:30px;"></i>
                        </a>
                    }
                </div>

            </div>
        </div>
    </div>
</li>
