@model smart_home_web.Models.SensorType.SensorTypeViewModel

@{
    ViewData["Title"] = "Delete";
}
@if (Model != null)
{
    <h2>Are you sure you want to delete this sensor type?</h2>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Comment)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Comment)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.MeasurementType)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MeasurementType)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.MeasurementName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MeasurementName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.IconPath)
            </dt>
            <dd>
                @if (Model.IconPath != null)
                {
                    <img src="@Model.IconPath" width="64" height="64" />
                }
                else
                {
                    <p>No image was added</p>
                }
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
}
else
{
    <h2>Error: Sensor type with such id was not found</h2>
    <a asp-action="Index">Back to List</a>
}